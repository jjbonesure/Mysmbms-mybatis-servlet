<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.echo.dao.ProviderMapper">

    <select id="getProviders" parameterType="map" resultType="provider">
        select * from smbms_provider
        <where>
            <if test="queryProCode !=null">
                proCode=#{queryProCode}
            </if>
            <if test="queryProName !=null">
                and proName=#{queryProName}
            </if>
        </where>
    </select>

    <select id="getProviderById" parameterType="_int" resultType="provider">
        select * from smbms_provider where id=#{id};
    </select>
    <update id="updateProvider" parameterType="map">
        update smbms_provider set proCode=#{proCode},proName=#{proName},proContact=#{proContact},proPhone=#{proPhone},proAddress=#{proAddress},
        proFax=#{proFax},proDesc=#{proDesc},modifyDate=#{modifyDate},modifyBy=#{modifyBy} where id=#{id};
    </update>
    <delete id="deleteProviderById" parameterType="_int">
        delete from smbms_provider where id=#{id};
    </delete>

</mapper>